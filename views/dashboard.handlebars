<section class = "container">
    <div class ="row">
      
        <div class="card" style="width: 500px" >
            <div class="card-body">
    <h2 class = "card-title">Create New Post</h2>
                

    <form>
      <div class="new-post-form">
      
         <label for="post-title">Title</label>
        <input type="text"  autofocus required id="post-title" name="post-title" />
 
      </div>
      <label for="post-url">Post:</label>
      <div>
     
        <textarea type="text" cols="50" rows="7" maxlength="500" id="post-url" name="post-url" /></textarea>
      </div>
     <p>Max-length:500 characters</p> 
      <button type="submit" class="btn btn-success">Create</button>
    </form>
            </div>
        </div>
    </div>
    </section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> blog-post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-blog.js"></script>