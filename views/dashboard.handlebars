<section class = "container">
    <div class ="row">
      
        <div class="card" style="width: 500px" >
            <div class="card-body">
    <h2 class = "card-title">Create New Post</h2>
                

    <form class="new-post-form">
      <div>
      
         <label for="post-title">Title</label>
        <input type="text" autofocus required id="post-title" name="post-title" />
 
      </div>
      <label for="post-url">Post:</label>
      <div>
     
        <textarea type="text" cols="50" rows="7" maxlength="500" id="text-body" name="text-body"></textarea>
      </div>
     <p>Max-length:500 characters</p> 
      <button type="submit" class="btn btn-success">Create</button>
    </form>
            </div>
        </div>
    </div>
    </section>


<section>
  <div class="container">
    <div class="row">
        <div class="col-8">
            <div class="card">
        
  <h2 class="post-header">Your Posts:</h2>

  
  <ol>
  <h3 class="blog-title">We want to render the title here</h3>
    <li>
      <p>
        This is an example of a post. Itll display the body of of the post.
      </p>
      
    </li>
 
  </ol>
            </div>
        </div>
    </div>
  </div>
</section>



    

{{#if posts.length}}
<section>
  <div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
        
  <h2 class="post-header">Your Posts</h2>
  <ol>
    
    {{#each posts as |post|}}
    <li>
      <p>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </p>
    </li>
    <li>
    <p>
    {{post.text_body}}
    </p></li> 
    {{/each}}
  </ol>
            </div>
        </div>
    </div>
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>