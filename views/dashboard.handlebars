<section class = "container">
    <div class ="row">

        <div class="card" style="width: 500px" >
            <div class="card-body">
    <h2 class = "card-title">Create New Post</h2>


    <form class="new-post-form">
      <div>

         <label for="post-title">Title</label>
        <input type="text" autofocus required id="post-title" name="post-title" />
 
      </div>
      <label for="post-url">Post:</label>
      <div>

        <textarea type="text" cols="50" rows="7" maxlength="500" id="text-body" name="text-body"></textarea>
      </div>
     <p>Max-length:500 characters</p> 
      <button type="submit" class="btn btn-success">Create</button>
    </form>
            </div>
        </div>
    </div>
    </section>


<section>
  <div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
            </div>
        </div>
    </div>
  </div>
</section>




<h2 class="post-header text-align=center">Your Posts</h2>
{{#if posts.length}}
 {{#each posts as |post|}}
<section>
  <div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">

 
  <ol> 

    <li>
      <p>
      <h3 id="{{post.id}}"class="card-title">{{post.title}}</h3>
      </p>
    </li>
    {{!-- <button class="editBtn col-md-1">Edit  --}}
        {{!-- </button> --}}

    <li>
    <p>
    {{post.text_body}}
    </p>
    </li> 
    <a href ="/dashboard/edit/{{post.id}}"> <button class="editBtn-body col-md-1">Edit
        </button>
        </a>

  </ol>
            </div>
        </div>
    </div>
  </div>
</section>
 {{/each}}
{{/if}}
<footer class="">
  <h3 class="text-center p-3 mb-2  text-white">Thank you for being valued member of our community!</h2>
  </footer>

